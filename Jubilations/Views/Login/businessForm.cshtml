@model Jubilations.Models.User

<link href="~/Design/Login/BL.css" rel="stylesheet" />



@using (Html.BeginForm("businessForm", "Login", FormMethod.Post))
{
    <div class="main">
        <div class="container">
            <div class="signup-content">
                <div class="signup-img">
                    <img src="~/image/businessform/bg.jpg" alt="wedding">
                </div>
                <div class="signup-form">
                    <form method="POST" class="register-form" id="register-form">
                        <h2>Business registration form</h2>
                        <div class="form-row">
                            <div class="form-group">
                                <label for="name">Owner Name :</label>
                                <input type="text" name="name" id="name" required />
                            </div>
                            <div class="form-group">
                                <label for="father_name">Business Name :</label>
                                <input type="text" name="father_name" id="father_name" required />
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="address">Business Address :</label>
                            <input type="text" name="address" id="address" required />
                        </div>
                        <div class="form-group">
                            <label for="pincCategoryode">GST NO :</label>
                            <input type="number" name="pincode" id="pincode" required>
                        </div>
                        <div class="form-row">

                            <div class="form-group">
                                <label for="city"> Category :</label>
                                <div class="form-select" required>
                                    <select name="city" id="city">
                                        <option value="">Select category</option>
                                        <option value="losangeles">Venue</option>
                                        <option value="washington">Photographer</option>
                                        <option value="losangeles">Decorator</option>
                                        <option value="losangeles">Cateers</option>
                                        <option value="losangeles">Makeup Artist</option>
                                        <option value="losangeles">Mahendi Artist</option>
                                        <option value="losangeles">Cloth Studio</option>
                                        <option value="losangeles">DJ Rocks</option>
                                        <option value="losangeles">Cards</option>
                                        <option value="losangeles">Transport</option>
                                    </select>
                                    <span class="select-icon"><i class="zmdi zmdi-chevron-down"></i></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="city">City :</label>
                                <div class="form-select" required>
                                    <select name="city" id="city">
                                        <option value="">Select City</option>
                                        <option value="losangeles">Surat</option>
                                        <option value="washington">Ahmedabad</option>
                                        <option value="losangeles">Vadodara</option>
                                        <option value="losangeles">Bardoli</option>
                                    </select>
                                    <span class="select-icon"><i class="zmdi zmdi-chevron-down"></i></span>
                                </div>
                            </div>
                        </div>


                        <div class="form-group">
                            <label for="email">Email ID :</label>
                            <input type="email" name="email" id="email" required>
                        </div>
                        <div class="form-group">
                            <label for="phone">Phone No. :</label>
                            <input type="number" name="phone" id="phone" required>
                        </div>

                        <div class="form-row">
                            <div class="form-group">
                                <label for="password">Password :</label>
                                <input type="password" name="password" id="password" required />
                            </div>
                            <div class="form-group">
                                <label for="c_password">Confirm Password :</label>
                                <input type="password" name="password" id="password" required />
                            </div>
                        </div>
                        <div class="form-submit">
                            <button class="submit" type="submit" id="submit" value="Register">Register</button>
                        </div>
                        <script type="text/javascript">

                            $(function () {
                               var msg = '@ViewData["result"]';
                               if (msg == '1')
                               {
                                   alert("User Details Inserted Successfully");
                                   window.location.href = "@Url.Action("businessForm", "Login")";
                                }
                               });
                        </script>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
