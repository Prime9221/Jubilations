@model Jubilations.Models.CategoryModel

@{
    ViewBag.Title = "A_Category";
    Layout = "~/Views/Layout/_A_adminLayoutPage.cshtml";
}

<br />
<br />

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">

                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Category DataTable</h3>

                        </div>
                        <button>@Html.ActionLink("Create New", "A_Category_Create")</button>
                        <!-- /.card-header -->
                        <div class="card-body">

                            <table id="example1" class="table table-bordered table-striped">

                                <thead>
                                    <tr>
                                        <th>Category Id</th>
                                        <th>Category Name</th>
                                        <th>Category Status</th>
                                        <th>Create Date</th>
                                        <th>Update Date</th>
                                        @*<th>Category Update Date</th>*@

                                        <th>Action</th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model.CategoryList.Count > 0)
                                    {
                                        foreach (var item in Model.CategoryList)
                                        {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Category_Id)
                                                </td>
                                                <td>
                                                    @if (item.Category_Name != null)
                                                    {
                                                        @Html.DisplayFor(modelItem => item.Category_Name)
                                                    }
                                                </td>
                                                <td>

                                                    @if (item.Category_Status != null)
                                                    {
                                                        @Html.DisplayFor(modelItem => item.Category_Status)
                                                    }
                                                </td>
                                                <td>

                                                    @if (item.Category_Create_Date != null)
                                                    {
                                                        @Html.DisplayFor(modelItem => item.Category_Create_Date)
                                                    }
                                                </td>
                                                <td>

                                                    @if (item.Category_Update_Date != null)
                                                    {
                                                        @Html.DisplayFor(modelItem => item.Category_Update_Date)
                                                    }
                                                </td>
                                                <td>
                                                    @Html.ActionLink("Edit", "A_Category_Edit", new { Category_Id = item.Category_Id }) |
                                                    @Html.ActionLink("Delete", "A_Category_delete", new { Category_Id = item.Category_Id }) 
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.card-body -->
                    </div>
                    <!-- /.card -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->